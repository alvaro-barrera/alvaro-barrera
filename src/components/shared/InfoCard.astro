---
import Image from "astro/components/Image.astro";

const { title, content, image = null, className = "" } = Astro.props;
---

<div class={`flex items-center ${className}`}>
  {image && (
    <div class="mr-4 w-1/3">
      <Image
        src={image}
        alt={title}
        class="h-auto w-full cursor-pointer rounded-lg object-cover"
        aria-label={`Ver imagen de ${title}`}
      />
    </div>
  )}
  <div class={image ? "w-2/3" : "w-full"}>
    <h3 class="mb-3 text-lg font-semibold text-gray-800 text-skin-accent dark:text-gray-100">
      {title}
    </h3>
    <p class="text-gray-600 dark:text-gray-300">{content}</p>
  </div>
</div>
